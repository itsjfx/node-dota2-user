#!/usr/bin/env bash

set -eu -o pipefail

echo "$0" "$(dirname "$0")"
cd "$(dirname "$0")/../"

# TODO: xargs
for file in ./protobufs/*.proto; do
    protoc \
        --proto_path=./protobufs \
        --plugin=./node_modules/.bin/protoc-gen-ts_proto \
        --ts_proto_out=src/protobufs/ \
        "$file"
done
